{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@types/node": "^17.0.18",
    "concurrently": "^7.0.0",
    "lerna": "^4.0.0",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "publish": "lerna run tsc && lerna publish",
    "build": "yarn workspaces foreach run build",
    "start": "cd packages/server && yarn run start:prod",
    "dev": "concurrently -n client,server \"cd packages/client && yarn dev\" \"cd packages/server && yarn dev\"",
    "dev-yarn": "yarn workspaces foreach -pi --topological-dev --include '{@untitledpay/server,@untitledpay/client}' run dev"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@3.1.1"
}
